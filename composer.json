{
    "name": "masterix21/laravel-bookings",
    "description": "Add bookings ability to any Eloquent model",
    "type": "library",
    "keywords": [
        "lucalongo",
        "laravel-bookings"
    ],
    "homepage": "https://github.com/masterix21/laravel-bookings",
    "license": "MIT",
    "authors": [
        {
            "name": "Luca Longo",
            "email": "l.longo@ambita.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^11.22",
        "kirschbaum-development/eloquent-power-joins": "^3.5",
        "lorisleiva/laravel-actions": "^2.8",
        "nesbot/carbon": "^3.8",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/period": "^2.4",
        "staudenmeir/belongs-to-through": "^2.15"
    },
    "require-dev": {
        "orchestra/testbench": "^9.4",
        "pestphp/pest": "^2.35",
        "pestphp/pest-plugin-laravel": "^2.4",
        "spatie/laravel-ray": "^1.37",
        "vimeo/psalm": "^6.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Masterix21\\Bookings\\": "src",
            "Masterix21\\Bookings\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Masterix21\\Bookings\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Masterix21\\Bookings\\BookingsServiceProvider"
            ],
            "aliases": {
                "Bookings": "Masterix21\\Bookings\\BookingsFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
